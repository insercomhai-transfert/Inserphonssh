{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/Microsoft/Application-Insights-Workbooks/blob/master/schema/corhort.json",
    "type": "object",
    "title": "Application Insights Cohort Schema",
    "required": [
        "cohortType",
        "version",
        "markDown",
        "parameters",
        "kqlItem",
        "query",
        "types"
    ],
    "properties": {
        "cohortType": {
            "$id": "#/properties/cohortType",
            "type": "integer"
        },
        "version": {
            "$id": "#/properties/version",
            "type": "string",
            "default": "Cohorts/3.0"
        },
        "markDown": {
            "$id": "#/properties/markDown",
            "type": "object",
            "required": [
                "json"
            ],
            "properties": {
                "json": {
                    "$id": "#/properties/markDown/properties/json",
                    "type": "string",
                    "examples": [
                        "## This is some markdown text"
                    ],
                    "tags": [
                        "localizable"
                    ]
                }
            }
        },
        "parameters": {
            "$id": "#/properties/parameters",
            "type": "string"
        },
        "kqlItem": {
            "$id": "#/properties/kqlItem",
            "type": "string"
        },
        "query": {
            "$id": "#/properties/query",
            "type": "string"
        },
        "types": {
            "$id": "#/properties/types",
            "type": "array"
        }
    }
}